{
  "name": "react-persistent-state-hook",
  "version": "0.9.0",
  "description": "React.useState + BrowserStorage persistence",
  "main": "dist/index.js",
  "repository": "git@github.com:deniskabana/react-persistent-state-hook.git",
  "url": "https://github.com/deniskabana/react-persistent-state-hook",
  "author": "Denis Kabana <denis.kabana@gmail.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "state",
    "state-management",
    "react-hooks"
  ],
  "files": [
    "/dist",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "start": "tsc -w",
    "build": "tsc",
    "check:tsc": "tsc --noEmit",
